# MLflow Model Serving Configuration

# ============================================================================
# MLflow Configuration
# ============================================================================
MLFLOW_MODEL_URI=models:/langchain-e2e-model/2
MLFLOW_ARTIFACT_PATH=s3://aiongenbucket/production_data/mlartifacts/2
MLFLOW_TRACKING_URI=http://127.0.0.1:5050

# ============================================================================
# S3/MinIO Configuration
# ============================================================================
S3_ENDPOINT_URL=http://localhost:9878
S3_ACCESS_KEY=hadoop
S3_SECRET_KEY=hadoop
S3_BUCKET_NAME=aiongenbucket
S3_REGION=us-east-1

# ============================================================================
# Server Configuration
# ============================================================================
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info
WORKERS=1
RELOAD=false

# ============================================================================
# Model Configuration
# ============================================================================
MODEL_CACHE_DIR=/tmp/mlflow_models
MAX_MODEL_CACHE_SIZE=1000000000
PRELOAD_MODEL=true

# ============================================================================
# Application Features
# ============================================================================
METRICS_ENABLED=true
ENABLE_CORS=true
DEBUG=false

# ============================================================================
# Performance Configuration
# ============================================================================
REQUEST_TIMEOUT=30
MAX_BATCH_SIZE=10
PREDICTION_TIMEOUT=10

# ============================================================================
# Health Check Configuration
# ============================================================================
HEALTH_CHECK_INTERVAL=30
READINESS_CHECK_TIMEOUT=5

# ============================================================================
# Security Configuration
# ============================================================================
# API_KEY=your-secret-api-key
# RATE_LIMIT=100
# ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================================================
# Development Configuration (uncomment for development)
# ============================================================================
# ENVIRONMENT=development
# DEBUG=true
# RELOAD=true
# LOG_LEVEL=debug

# ============================================================================
# Production Configuration (uncomment for production)
# ============================================================================
# ENVIRONMENT=production
# DEBUG=false
# RELOAD=false
# LOG_LEVEL=info
# WORKERS=4